<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/mainLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/employee_id_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/employee_name_txt"
            android:layout_width="78dp"
            android:layout_height="33dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:text="Name"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/employee_id_txt"
            app:layout_constraintTop_toTopOf="@+id/employee_id_txt" />

        <TextView
            android:id="@+id/employee_address_txt"
            android:layout_width="183dp"
            android:layout_height="38dp"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="40dp"
            android:text="Address"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/employee_name_txt"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/employee_dob_txt"
            android:layout_width="54dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:text="DOB"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/employee_name_txt"
            app:layout_constraintTop_toBottomOf="@+id/employee_name_txt" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>